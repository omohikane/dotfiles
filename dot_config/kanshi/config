# 🖥️ ノートPC単体（eDP-1のみ）
profile solo-edp {
  output eDP-1 {
    mode 1920x1200
    status enable
  }
  output "*" {
    status disable
  }
}

# 🖥️ 外部モニタ EV2795（シングル運用）
profile single-ev2795-53453072 {
  output eDP-1 {
    mode 1920x1200
    status enable
  }
  output "Eizo Nanao Corporation EV2795 53453072" {
    mode 2560x1440
    status enable
  }
  output "*" {
    status disable
  }
}

# 🖥️ デュアルモニタ EV2450 + EV2455
profile dual-ev2450-ev2455 {
  output eDP-1 {
    mode 1920x1200
    status enable
  }
  output "Eizo Nanao Corporation EV2450 24776026" {
    mode 1920x1080
    status enable
  }
  output "Eizo Nanao Corporation EV2455 0x0533B657" {
    mode 1920x1200
    status enable
  }
  output "*" {
    status disable
  }
}

# Dual EV2795
profile home-dual-ev2795 {
  output eDP-1 {
    mode 1920x1200
    position 0,1440
    status enable
  }
  output "Eizo Nanao Corporation EV2795 52324062" {
    mode 2560x1440
    position 0,0
    status enable
  }
  output "Eizo Nanao Corporation EV2795 52326062" {
    mode 2560x1440
    position 2560,0
    status enable
  }
  output "*" {
    status disable
  }
}

# Unknown output
profile fallback-anywhere {
  output eDP-1 {
    mode 1920x1200
    status enable
  }
  output "*" {
    mode 1920x1200
    status enable
  }
}

